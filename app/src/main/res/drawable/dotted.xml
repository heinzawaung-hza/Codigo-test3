<!-- dotted_rectangle_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Define the border color and thickness -->
            <stroke
                android:width="1dp"
                android:color="@android:color/black" />
        </shape>
    </item>
    <!-- Create the dotted line pattern -->
    <item
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@android:color/black" />
            <!-- Set the spacing and length of the dotted pattern -->
            <stroke
                android:width="1dp"
                android:color="@android:color/black"
                android:dashWidth="4dp"
                android:dashGap="4dp" />
        </shape>
    </item>
</layer-list>
